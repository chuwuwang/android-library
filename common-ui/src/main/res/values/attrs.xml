<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EditTextVerificationCode">
        <attr name="code_size" format="integer" />
        <attr name="code_margin" format="dimension" />
        <attr name="code_background" format="reference" />
        <attr name="code_cursor_visible" format="boolean" />
        <attr name="code_cursor_drawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="progress_color" format="color" />
        <attr name="progress_stroke_color" format="color" />
        <attr name="progress_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="GradientTextView">
        <attr name="gradient_text" format="string" />
        <attr name="gradient_text_size" format="dimension" />
        <attr name="gradient_up_color" format="color" />
        <attr name="gradient_below_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleStickIndicator">
        <attr name="indicator_radius" format="dimension" />
        <attr name="indicator_padding" format="dimension" />
        <attr name="indicator_color" format="color|reference" />
        <attr name="indicator_stick_enable" format="boolean" />
        <attr name="indicator_select_radius" format="dimension" />
        <attr name="indicator_select_color" format="color|reference" />
    </declare-styleable>

</resources>